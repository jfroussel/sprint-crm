<div class="row">
	<div class="col-md-3">
		<div class="select form-group">
			<form>
				<label>Assigner le débiteur à un gestionnaire</label>
				<select j-on-j:change="updateManager" is="select" name="user_id" autocomplete="off">
					<option value="">Aucun</option>
					<option j-for="user in userList" :value="{{user.id}}">{{user.first_name}} {{user.last_name}} {{user.first_name||user.last_name?'':user.email}}</option>
				</select>
			</form>
		</div>
	</div>
</div>
